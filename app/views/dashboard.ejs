<!-- Logged in landing page for user -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Welcome to Recipe Remix</title>
    <meta name="description" content="Your personalized recipe dashboard" />

    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/styles.css" />
    <!-- Lucide Icons -->
    <script src="https://unpkg.com/lucide@latest"></script>
  </head>
  <body>
        <!-- Header -->
    <%- include('partials/header') %>

    <nav class="bg-white border-bottom py-2">
      <div class="container">
        <ul class="nav">
          <li class="nav-item">
            <a class="nav-link" href="/">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/recipes">Recipes</a>
          </li>
          <li class="nav-item">
            <a class="nav-link active" href="/dashboard">Dashboard</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/profile">My Profile</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/about">About</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/contact">Contact</a>
          </li>
        </ul>
      </div>
    </nav>

    <div class="container py-5">
      <div class="row mb-5">
        <div class="col-12">
          <div
            class="welcome-banner bg-primary text-white p-4 rounded-3 shadow-sm"
          >
            <div class="d-flex align-items-center justify-content-between">
              <div>
                <h1 class="display-5 fw-bold">
                  Welcome back, <span id="welcomeUsername">Chef</span>!
                </h1>
                <p class="lead mb-0">
                  What delicious recipes will you discover today?
                </p>
              </div>
              <div class="d-none d-md-block">
                <i data-lucide="chef-hat" style="width: 80px; height: 80px"></i>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="row mb-4">
        <div class="col-md-4 mb-4 mb-md-0">
          <div class="card h-100 border-0 shadow-sm">
            <div class="card-body">
              <div class="d-flex align-items-center mb-3">
                <div class="rounded-circle bg-primary bg-opacity-10 p-3 me-3">
                  <i data-lucide="book-open" class="text-primary"></i>
                </div>
                <h3 class="card-title mb-0">My Recipes</h3>
              </div>
              <p class="card-text text-muted">
                You have
                <span id="myRecipesCount" class="fw-bold">0</span> recipes in
                your collection.
              </p>
              <a href="/profile#recipes-content" class="btn btn-outline-primary"
                >View My Recipes</a
              >
            </div>
          </div>
        </div>

        <div class="col-md-4 mb-4 mb-md-0">
          <div class="card h-100 border-0 shadow-sm">
            <div class="card-body">
              <div class="d-flex align-items-center mb-3">
                <div class="rounded-circle bg-danger bg-opacity-10 p-3 me-3">
                  <i data-lucide="heart" class="text-danger"></i>
                </div>
                <h3 class="card-title mb-0">Favorites</h3>
              </div>
              <p class="card-text text-muted">
                You have
                <span id="favoritesCount" class="fw-bold">0</span> favorite
                recipes.
              </p>
              <a
                href="/profile#favorites-content"
                class="btn btn-outline-danger"
                >View Favorites</a
              >
            </div>
          </div>
        </div>

        <div class="col-md-4">
          <div class="card h-100 border-0 shadow-sm">
            <div class="card-body">
              <div class="d-flex align-items-center mb-3">
                <div class="rounded-circle bg-success bg-opacity-10 p-3 me-3">
                  <i data-lucide="plus" class="text-success"></i>
                </div>
                <h3 class="card-title mb-0">Create Recipe</h3>
              </div>
              <p class="card-text text-muted">
                Share your culinary creations with the world.
              </p>
              <button
                class="btn btn-success"
                data-bs-toggle="modal"
                data-bs-target="#addRecipeModal"
              >
                Create New Recipe
              </button>
            </div>
          </div>
        </div>
      </div>

      <div class="row mb-5">
        <div class="col-12">
          <div class="card border-0 shadow-sm">
            <div class="card-header bg-white py-3">
              <div class="d-flex justify-content-between align-items-center">
                <h3 class="mb-0">Trending Recipes</h3>
                <a href="/recipes" class="btn btn-sm btn-outline-primary"
                  >View All</a
                >
              </div>
            </div>
            <div class="card-body">
              <div class="trending-recipes-grid recipes-grid">
                <!-- Trending recipes will be loaded here -->
                <div class="text-center py-5" id="trending-loading">
                  <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Loading...</span>
                  </div>
                  <p class="mt-2 text-muted">Loading trending recipes...</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-md-6 mb-4 mb-md-0">
          <div class="card border-0 shadow-sm h-100">
            <div class="card-header bg-white py-3">
              <h3 class="mb-0">Quick Tips</h3>
            </div>
            <div class="card-body">
              <div class="tip-item mb-3 pb-3 border-bottom">
                <div class="d-flex">
                  <div class="me-3 text-primary">
                    <i data-lucide="lightbulb"></i>
                  </div>
                  <div>
                    <h5>Customize Your Recipes</h5>
                    <p class="text-muted mb-0">
                      Use the "Edit" button on your recipes to update
                      ingredients, instructions, or photos.
                    </p>
                  </div>
                </div>
              </div>
              <div class="tip-item mb-3 pb-3 border-bottom">
                <div class="d-flex">
                  <div class="me-3 text-primary">
                    <i data-lucide="lightbulb"></i>
                  </div>
                  <div>
                    <h5>Organize with Tags</h5>
                    <p class="text-muted mb-0">
                      Add tags to your recipes to make them easier to find and
                      categorize.
                    </p>
                  </div>
                </div>
              </div>
              <div class="tip-item">
                <div class="d-flex">
                  <div class="me-3 text-primary">
                    <i data-lucide="lightbulb"></i>
                  </div>
                  <div>
                    <h5>Share Your Creations</h5>
                    <p class="text-muted mb-0">
                      Make your recipes public to share them with the Recipe
                      Remix community.
                    </p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="col-md-6">
          <div class="card border-0 shadow-sm h-100">
            <div class="card-header bg-white py-3">
              <h3 class="mb-0">Recipe of the Day</h3>
            </div>
            <div class="card-body">
              <div id="recipe-of-day">
                <div class="text-center py-5" id="recipe-of-day-loading">
                  <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Loading...</span>
                  </div>
                  <p class="mt-2 text-muted">Loading recipe of the day...</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Add Recipe Modal -->
    <div
      class="modal fade"
      id="addRecipeModal"
      tabindex="-1"
      aria-labelledby="addRecipeModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog modal-lg">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="addRecipeModalLabel">Add New Recipe</h5>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body">
            <form id="addRecipeForm">
              <div class="mb-3">
                <label for="recipeTitle" class="form-label">Recipe Title</label>
                <input
                  type="text"
                  class="form-control"
                  id="recipeTitle"
                  name="title"
                  required
                />
              </div>

              <div class="mb-3">
                <label for="recipeDescription" class="form-label"
                  >Description</label
                >
                <textarea
                  class="form-control"
                  id="recipeDescription"
                  name="description"
                  rows="3"
                  required
                ></textarea>
              </div>

              <div class="mb-3">
                <label for="recipeIngredients" class="form-label"
                  >Ingredients</label
                >
                <textarea
                  class="form-control"
                  id="recipeIngredients"
                  name="ingredients"
                  rows="5"
                  placeholder="Enter each ingredient on a new line"
                  required
                ></textarea>
              </div>

              <div class="mb-3">
                <label for="recipeSteps" class="form-label">Instructions</label>
                <textarea
                  class="form-control"
                  id="recipeSteps"
                  name="steps"
                  rows="5"
                  placeholder="Enter each step on a new line"
                  required
                ></textarea>
              </div>

              <div class="row">
                <div class="col-md-4 mb-3">
                  <label for="recipePrepTime" class="form-label"
                    >Prep Time (minutes)</label
                  >
                  <input
                    type="number"
                    class="form-control"
                    id="recipePrepTime"
                    name="prepTime"
                    min="0"
                    required
                  />
                </div>

                <div class="col-md-4 mb-3">
                  <label for="recipeCookTime" class="form-label"
                    >Cook Time (minutes)</label
                  >
                  <input
                    type="number"
                    class="form-control"
                    id="recipeCookTime"
                    name="cookTime"
                    min="0"
                    required
                  />
                </div>

                <div class="col-md-4 mb-3">
                  <label for="recipeServings" class="form-label"
                    >Servings</label
                  >
                  <input
                    type="number"
                    class="form-control"
                    id="recipeServings"
                    name="servings"
                    min="1"
                    required
                  />
                </div>
              </div>

              <div class="mb-3">
                <label for="recipeTags" class="form-label"
                  >Tags (comma separated)</label
                >
                <input
                  type="text"
                  class="form-control"
                  id="recipeTags"
                  name="tags"
                  placeholder="e.g. Vegan, Gluten-Free, Quick"
                />
              </div>

              <div class="mb-3">
                <label for="recipeImage" class="form-label">Recipe Image</label>
                <input
                  type="file"
                  class="form-control"
                  id="recipeImage"
                  name="image"
                  accept="image/*"
                />
              </div>

              <div class="mb-3 form-check">
                <input
                  type="checkbox"
                  class="form-check-input"
                  id="recipePrivate"
                  name="isPrivate"
                />
                <label class="form-check-label" for="recipePrivate"
                  >Make this recipe private</label
                >
              </div>
            </form>
          </div>
          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-secondary"
              data-bs-dismiss="modal"
            >
              Cancel
            </button>
            <button type="button" class="btn btn-primary" id="saveRecipeBtn">
              Save Recipe
            </button>
          </div>
        </div>
      </div>
    </div>

    <!-- Include the modals -->
    <%- include('partials/login-modal') %> <%- include('partials/signup-modal')
    %>

    <!-- Include the footer -->
    <%- include('partials/footer') %>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Auth JS -->
    <script src="/js/auth.js"></script>
    <!-- Recipes JS -->
    <script src="/js/recipes.js"></script>
  </body>
</html>
